{
  "name": "@lcdev/ts",
  "description": "TypeScript common helpers and core library",
  "version": "0.2.9",
  "license": "MPL-2.0",
  "author": {
    "name": "Launchcode",
    "email": "admin@lc.dev",
    "url": "https://lc.dev"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "!*.tsbuildinfo",
    "!*.test.*"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint --ext .ts,.tsx src",
    "fix": "eslint --ext .ts,.tsx src --fix",
    "test": "jest",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "8",
    "@lcdev/commitlint": "1",
    "@lcdev/eslint-config": "0.2",
    "@lcdev/jest": "0.1",
    "@lcdev/prettier": "0.1",
    "@lcdev/tsconfig": "0.1",
    "@types/jest": "24",
    "@types/node": "8",
    "eslint": "6",
    "husky": "3",
    "jest": "24",
    "prettier": "1",
    "tslint": "5",
    "tslint-config-airbnb": "5",
    "tslint-eslint-rules": "5",
    "typescript": "3"
  },
  "prettier": "@lcdev/prettier",
  "eslintConfig": {
    "extends": "@lcdev"
  },
  "jest": {
    "preset": "@lcdev/jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@lcdev/commitlint"
    ]
  }
}
